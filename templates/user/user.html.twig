{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.firstName, {'label': 'first name : '}) }}
        {{ form_row(form.lastName, {'label': 'last name : '}) }}
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}

    <br>
    <ul>
    {% for user in users %}
        <li>{{ user.id }} - {{ user.firstName }} {{ user.lastName }}</li>
        <a href="{{ path('delete_user', {'id': user.id}) }}">Delete</a>
    {% endfor %}
    </ul>
{% endblock %}
